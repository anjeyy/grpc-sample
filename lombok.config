# https://projectlombok.org/features/configuration

# stop lombok from looking at parent
# directories for more configuration files
config.stopBubbling = true

# Lombok can be configured to add '@lombok.Generated' annotations
# to all generated nodes where possible;
# useful for JaCoCo (which has built in support),
# or other style checkers and code coverage tools
lombok.addLombokGeneratedAnnotation = true

# If true, lombok will generate a @java.beans.ConstructorProperties
# annotation when generating constructors - immutable objects (@Value) with @Builder possible!
# Allows mappings and json de-/serialization with '@Value' annotation!
lombok.anyConstructor.addConstructorProperties = true

